{
    "name": "popphp/pop-config",
    "description": "Pop Config Component for Pop PHP Framework",
    "keywords": [
        "config",
        "configuration",
        "app config",
        "application configuration",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "https://github.com/popphp/pop-config",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "popphp/pop-utils": "^2.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.0"
    },
    "suggest": {
        "ext-json": "For handling JSON data",
        "ext-simplexml": "For handling XML data",
        "ext-dom": "For handling DOM data",
        "ext-yaml": "For handling YAML data"
    },
    "autoload": {
        "psr-4": {
            "Pop\\Config\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pop\\Config\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
